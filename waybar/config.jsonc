// -*- mode: jsonc -*-
{
  "position": "top", // Waybar position (top|bottom|left|right)
  "height": 32, // Fixed height keeps bar compact on FHD 14\" and 1600x900 19.5\"
  "spacing": 3, // Slightly tighter gaps between modules
  "modules-left": [
	"hyprland/workspaces",
    //"custom/updates",
    // "network",
    "group/hardware",
    "sway/mode",
    "sway/scratchpad"
  ],

  "modules-center": [
    "clock",
  ],

  "modules-right": [
    "privacy",
    "tray",
    "custom/pomodoro",
    "power-profiles-daemon",
    "group/settings",
    "network",
    "bluetooth",
    "custom/dunst",
    "custom/power"
  ],

  // Modules configuration
  "sway/workspaces": {
    "disable-scroll": true
  },

  "keyboard-state": {
    "numlock": true,
    "capslock": true,
    "format": "{name} {icon}",
    "format-icons": {
      "locked": "ÔÄ£",
      "unlocked": "ÔÇú"
    }
  },
  "sway/mode": {
    "format": "<span style=\"italic\">{}</span>"
  },
  "sway/scratchpad": {
    "format": "{icon} {count}",
    "show-empty": false,
    "format-icons": [
      "",
      "Ôãí"
    ],
    "tooltip": true,
    "tooltip-format": "{app}: {title}"
  },
  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "ÔÅÆ",
      "deactivated": "ÔÅ∞"
    }
  },
  "tray": {
    "spacing": 10,
    // "icons": {
    //   "blueman": "bluetooth",
    //   "TelegramDesktop": "$HOME/.local/share/icons/hicolor/16x16/apps/telegram.png"
    // }
  },


  "clock": {
    "format": "{:%a, %d %b %H:%M}",
    "tooltip-format": "{calendar}"
  },
  "cpu": {
    "format": "{usage}% Ôãõ",
    "tooltip": false
  },
  "memory": {
    "format": "{used:0.1f}G/{total:0.1f}G Ôî∏"
  },
  "temperature": {
    // "thermal-zone": 2,
    // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
    "critical-threshold": 80,
    // "format-critical": "{temperatureC}¬∞C {icon}",
    "format": "{temperatureC}¬∞C {icon}",
    "format-icons": [
      "Ôù´",
      "Ôãâ",
      "Ôù©"
    ]
  },
  "bluetooth": {
    "on-click": "blueman-manager",
    "format": "Û∞ÇØ",
    "format-connected": "Û∞Ç± {device_alias}",
    "format-connected-battery": "Û∞Ç± {device_alias} {device_battery_percentage}%",
    "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
    "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
    "tooltip-format-enumerate-connected-battery": "{device_alias}\t{device_address}\t{device_battery_percentage}%"
  },
  "backlight": {
    // "device": "acpi_video1",
    "format": "{percent}% {icon}",
    "format-icons": [
      "üåë",
      "üåò",
      "üåó",
      "üåñ",
      "üåï"
    ]
  },
  "battery": {
    "states": {
      "good": 95,
      "warning": 50,
      "critical": 25
    },
    "format": "{icon} {capacity}%",
    "format-full": "{icon} {capacity}%",
    "format-charging": "Ôóß {capacity}%",
    "format-plugged": "Ôá¶ {capacity}%",
    "format-alt": "{time} {icon}",
    // "format-good": "", // An empty format will hide the module
    // "format-full": "",
    "format-icons": [
      "ÔâÑ",
      "ÔâÉ",
      "ÔâÇ",
      "ÔâÅ",
      "ÔâÄ"
    ]
  },
  "battery#bat2": {
    "bat": "BAT2"
  },
  "power-profiles-daemon": {
    "format": "{icon}",
    "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
    "tooltip": true,
    "format-icons": {
      "default": "ÔÉß",
      "performance": "ÔÉß",
      "balanced": "Ôâé",
      "power-saver": "ÔÅ¨"
    }
  },
  "network": {
    // "interface": "wlp2*", // (Optional) To force the use of this interface
    "format-wifi": "Ôá´ {essid}",
    "on-click": "kitty --detach -- bash -c 'nmtui'",
    "format-ethernet": "{ipaddr}/{cidr} Ôûñ",
    "tooltip-format": "{ifname} via {gwaddr} Ôûñ",
    "format-linked": "{ifname} (No IP) Ôûñ",
    "format-disconnected": "Disconnected ‚ö†",
    // "format-alt": "{ifname}: {ipaddr}/{cidr}"
  },
  "pulseaudio": {
    // "scroll-step": 1, // %, can be a float
    "format": "{icon} {volume}% {format_source}",
    "format-bluetooth": "{icon} {volume}% {format_source}",
    "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
    "format-muted": "Ôö© {format_source}",
    "format-source": "ÔÑ∞ {volume}%",
    "format-source-muted": "",
    "format-icons": {
      "default": [
        "ÔÄ¶",
        "ÔÄß",
        "ÔÄ®"
      ]
    },
    "on-click": "pavucontrol"
  },
  "custom/power": {
    "format": " ‚èª ",
    "tooltip": false,
    "on-click": "$HOME/.dots/script/powermenu.sh"
  },
  "sway/window": {
    "format": "{}",
    "max-length": 30
  },
  "group/hardware": {
    "orientation": "horizontal",
    "modules": [
      "idle_inhibitor",
      // "cpu",
      "memory",
      "battery"
    ]
  },
  "group/settings": {
    "orientation": "horizontal",
    "modules": [
      "pulseaudio"
    ]
  },
  "custom/clipboard": {
    "on-click": "/home/$USER/.dots/script/rofi-clipboard.sh",
    "format": "Óµ∫"
  },
  "custom/screenshot": {
    "on-click": "/home/$USER/.dots/script/screenshot.sh",
    "format": "Û∞ÑÑ"
  },
  "custom/dunst": {
    "format": "{}",
    "exec": "/home/$USER/.dots/script/dunst_status.sh",
    "interval": 5,
    "tooltip": "Modo N√£o Perturbe",
    "on-click": "dunstctl set-paused toggle"
  },
  "custom/pomodoro": {
    "format": "{}",
    "return-type": "json",
    "exec": ".local/bin/waybar-module-pomodoro --work 30 --shortbreak 10 --longbreak 30 --persist",
    "on-click": ".local/bin/waybar-module-pomodoro toggle",
    "on-click-right": ".local/bin/waybar-module-pomodoro reset"
  },
  "privacy": {
    "icon-spacing": 8,
    "icon-size": 16,
    "transition-duration": 250,
    "modules": [
      {
        "type": "screenshare",
        "tooltip": true,
        "tooltip-icon-size": 24
      },
    // {
    // 	"type": "audio-out",
    // 	"tooltip": true,
    // 	"tooltip-icon-size": 24
    // },
    {
      "type": "audio-in",
      "tooltip": true,
      // "tooltip-icon-size": 24
    }
    ],
    "ignore-monitor": true,
    "ignore": [
      {
        "type": "audio-in",
        "name": "cava"
      },
      {
        "type": "screenshare",
        "name": "obs"
      }
    ]
  },

  "custom/openbracket": {
    "format": "[",
      "tooltip": false
  },
  "custom/closebracket": {
    "format": "]",
    "tooltip": false
  },    
  "custom/split": {
    "format": "|",
    "tooltip": false
  },
  "custom/updates": {
    "exec": "~/.dots/script/checkupdate-arch.sh",
    "on-click-right": "~/.dots/script/checkupdate-arch.sh",
    "on-click-middle": "kitty -e bash -lc 'sudo pacman -Syu && flatpak update -y'",
    "interval": "9000",
    "return-type": "json",
    "format": "{icon} {text}",
    "format-icons": {
        "has-updates": "Û∞ûÄ",
        "updated": "Û∞ï•"
    }
}

  }
}
