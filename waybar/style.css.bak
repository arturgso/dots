/* Estilo específico para os workspaces (container) */
#workspaces {
  background-color: #1a2a1a;
  padding: 0 4px;
}

/* Botões de workspace */
#workspaces button {
  background: transparent;
  color: #b8b5c0;
  min-width: 0;
}

/* Destaque no workspace focado */
#workspaces button.focused {
  color: #4AC05B;
  font-weight: bold;
  /* background-color: rgba(74, 192, 91, 0.5); */
}

/* Workspace visível (em outro monitor) */
#workspaces button.visible {
  color: #e2e0e5;
  background-color: #4AC05B;
  padding: 0 18px;
}

/* Workspace urgente */
#workspaces button.urgent {
  color: #ff6b6b;
  background-color: rgba(255, 107, 107, 0.2);
}

/* Workspace vazio */
#workspaces button.empty {
  color: #b8b5c0;
  opacity: 0.5;
}

/* Hover simples */
#workspaces button:hover {
  background-color: rgba(74, 192, 91, 0.3);
  color: #e2e0e5;
}

/* Estilos especiais de status */
#battery.warning {
  color: #f1c40f;
}
#battery.critical {
  color: #ff6b6b;
}
#temperature.critical {
  color: #ff6b6b;
}
#pulseaudio.muted {
  color: #b8b5c0;
  opacity: 0.7;
}
#network.disconnected {
  color: #b8b5c0;
  opacity: 0.7;
}

#custom-pomodoro.work {
  color: #00FF00;
}
#custom-pomodoro.break {
  color: #FFAA00;
}
#custom-pomodoro.pause {
  color: #888888;
}

#battery.good {
  color: #19B206;
}

#battery.warning {
  color: #FFC107;
}

#battery.critical {
  color: #F44336;
}
