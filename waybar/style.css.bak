/* style.css – Tema Verde para Waybar */

* {
  font-family: 'Noto Sans Mono', 'Font Awesome 6 Free', 'Font Awesome 6 Brands', monospace;
  font-size: 13px;
  color: #e2e0e5;
}

/* Estilo geral da barra */
window#waybar {
  background-color: rgba(0, 0, 0, 0.5);
  color: #e2e0e5;
}

window#waybar.hidden {
  opacity: 0.2;
}

/* Estilo base para os módulos principais */
#workspaces,
#settings,
#hardware,
#power-profiles-daemon,
#temperature,
#language,
#right,
#mpd,
#custom-media,
#custom-power,
#custom-pomodoro,
#keyboard-state,
#sway-mode,
#sway-scratchpad,
#clock,
#privacy,
#tray,
#bluetooth,
#custom-updates {
  margin: 8px 2px;
  border-radius: 10;
  background-color: #1a2a1a;
  padding: 8px 12px;   
  color: #e2e0e5;
}

#pulseaudio,
#network,
#cpu,
#memory,
#battery,
#idle_inhibitor,
#custom-dunst {
  margin-left: 8px;
  margin-right: 8px;
}

