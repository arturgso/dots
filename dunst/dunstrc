# See dunst(5) for all configuration options

[global]
    ### Display ###
    monitor = 0
    follow = mouse

    ### Geometry ###
    width = 300
    height = (0, 300)
    origin = top-right
    offset = (10, 50)
    scale = 0
    notification_limit = 20

    ### Progress bar ###
    progress_bar = false
    progress_bar_height = 10
    progress_bar_frame_width = 1
    progress_bar_min_width = 150
    progress_bar_max_width = 300
    progress_bar_corner_radius = 0
    progress_bar_corners = all
    icon_corner_radius = 6
    icon_corners = all
    indicate_hidden = yes

    ### Aparência Crimson ###
    transparency = 10
    separator_height = 2
    padding = 8
    horizontal_padding = 8
    text_icon_padding = 6
    frame_width = 2
    frame_color = "#5567D9"         # theme:accent
    gap_size = 0
    separator_color = "#141B29"     # theme:background-alt
    sort = yes
    font = JetBrainsMono Nerd Font 10
    line_height = 0
    markup = full
    format = "<b>%s</b>\n%b"
    alignment = left
    vertical_alignment = center
    show_age_threshold = 60
    ellipsize = middle
    ignore_newline = no
    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = yes

    ### Icons ###
    enable_recursive_icon_lookup = true
    icon_theme = Papirus-Dark
    icon_position = left
    min_icon_size = 32
    max_icon_size = 64
    icon_path = /usr/share/icons/Papirus-Dark/16x16/status/:/usr/share/icons/Papirus-Dark/16x16/devices/:/usr/share/pixmaps/
    ### History ###
    sticky_history = yes
    history_length = 20

    ### Misc/Advanced ###
    dmenu = ~/.dots/script/rofi-dunst-actions.sh -p dunst:
    browser = /usr/bin/xdg-open
    always_run_script = true
    title = Dunst
    class = Dunst
    corner_radius = 10
    corners = all
    ignore_dbusclose = false
    force_xwayland = false
    force_xinerama = false
    actions = true

    ### Mouse ###
    mouse_left_click = do_action, close_current
    mouse_middle_click = close_current
    mouse_right_click = close_all

[experimental]
    per_monitor_dpi = false

# Paleta controlada pelo script ~/.dots/script/rofi-theme-selector.sh

[urgency_low]
    background = "#0C101B"          # theme:background
    foreground = "#3BC8AF"          # theme:active
    frame_color = "#141B29"         # theme:background-alt
    timeout = 8
    default_icon = dialog-information

[urgency_normal]
    background = "#0C101B"          # theme:background
    foreground = "#E4E9FF"          # theme:foreground
    frame_color = "#5567D9"         # theme:accent
    timeout = 10
    override_pause_level = 30
    default_icon = dialog-information

[urgency_critical]
    background = "#141B29"          # theme:background-alt
    foreground = "#E4E9FF"          # theme:foreground
    frame_color = "#FF6B81"         # theme:urgent
    timeout = 0
    override_pause_level = 60
    default_icon = dialog-warning

